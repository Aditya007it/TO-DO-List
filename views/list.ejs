<%- include("header") %>

    <body>
        <div class="box" id="heading">

            <h1>Its a <%=kindDay%>
            </h1>

        </div>

        <!-- this route is responsible for deleting an item -->
        <div class="box">
            <%newListItem.forEach(function(element) { %>

                <form action="/delete" method="post">
                    <div class="item">
                        <input type="checkbox" name="checkbox" value="<%= element._id %>" onchange="this.form.submit()">
                        <p>
                            <%= element.name %>
                        </p>
                    </div>
                    <input type="hidden" name="listName" value="<%= kindDay%>">
                </form>
            <% }) %>

                    <!-- This route is resposible for adding item -->
                    <form action="/" class="item" method="post">
                        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
                        <button type="submit" name="list" value="<%=kindDay%>">+</button>
                    </form>

        </div>

        <%- include("footer") %>

    </body>


    </html>